<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/git_url_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"
        android:textSize="25dp"
        android:gravity="center"
        android:text="Git url"/>

    <TextView
        android:id="@+id/git_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/git_url_label"
        android:textSize="23dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/license_label"
        app:layout_constraintTop_toBottomOf="@id/git_url"
        android:textColor="#000000"
        android:text="License"
        android:textSize="25dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/key_label"
        app:layout_constraintTop_toBottomOf="@id/license_label"
        android:textColor="#000000"
        android:text="Key"
        android:textSize="24dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/key_label"
        android:id="@+id/key"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_label"
        app:layout_constraintTop_toBottomOf="@id/key"
        android:textColor="#000000"
        android:text="Name"
        android:textSize="24dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:id="@+id/name"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spdx_id_label"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textColor="#000000"
        android:text="SPDX Id"
        android:textSize="24dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/spdx_id_label"
        android:id="@+id/spdx_id"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/url_label"
        app:layout_constraintTop_toBottomOf="@id/spdx_id"
        android:textColor="#000000"
        android:text="URL"
        android:textSize="24dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/url_label"
        android:id="@+id/url"
        android:gravity="center"/>
</android.support.constraint.ConstraintLayout>